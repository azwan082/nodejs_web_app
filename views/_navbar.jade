nav.navbar.navbar-inverse.navbar-fixed-top
  div.container
    div.navbar-header
      button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#navbar')
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')= __('Website')
    div.navbar-collapse.collapse
      ul.nav.navbar-nav
        li.active
          a(href='/')= __('Home')
      ul.nav.navbar-nav.navbar-right
        if user.id
          li(class='dropdown active')
            a.dropdown-toggle(href='#' data-toggle='dropdown')= user.name + ' '
              span.caret
            ul.dropdown-menu(role='menu')
              li
                a(href='/dashboard')= __('Dashboard')
                a(href='/settings')= __('Settings')
              li.divider
              li
                a(href='/logout')= __('Logout')
        else
          li(class=selectedNavBarTab == 'login' && 'active')
            a(href='/login')= __('Login')
extends _layout

block content
  include _navbar
  div.container
    div.row
      o.breadcrumb
        li
          a(href='/')= __('Home')
        li.active= __('Forgot password')
  div.container
    div.row
      div.col-md-9
        include _flash
        h1= __('Forgot password')
        if !inputs.sent
          form.form-horizontal(action='/forgot' method='post')
            div.form-group
              div.col-md-offset-3.col-md-9
                p= __('Give us your email address and we will send you link to reset your password')
            div.form-group(class=errors.email ? 'has-error' : '')
              label.col-md-3.control-label= __('Email')
              div.col-md-9
                input.form-control(type='email' name='email' maxlength='255')
                span.help-block(class=errors.email ? '' : 'hidden')= errors.email
            div.form-group
              div.col-md-offset-3.col-md-9
                button.btn.btn-primary(type='submit')= __('Send')
      div.col-md-3
        include _sidebar
    include _footer
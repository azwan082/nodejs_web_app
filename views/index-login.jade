extends _layout

block content
  include _navbar
  div.container
    div.row
      o.breadcrumb
        li
          a(href='/')= __('Home')
        li.active= __('Login')
  div.container
    div.row
      div.col-md-9
        include _flash
        h1= __('Login')
        form.form-horizontal(action='/login' + (inputs.rd ? '?rd=' + encodeURIComponent(inputs.rd) : '') method='post')
          div(class='form-group' + (errors.login ? ' has-error' : ''))
            label.col-md-3.control-label= __('Login')
            div.col-md-9
              input.form-control(type='text' name='login' max-length='255' value=(inputs.login || '') placeholder='Username or email')
              if errors.login
                span.help-block= errors.login
          div(class='form-group' + (errors.password ? ' has-error' : ''))
            label.col-md-3.control-label= __('Password')
            div.col-md-9
              input.form-control(type='password' name='password')
              if errors.password
                span.help-block= errors.password
          div.form-group
            div.col-md-offset-3.col-md-9
              div.checkbox
                label
                  input(type='checkbox' name='remember' value='1')
                  = __('Remember me')
          div.form-group
            div.col-md-offset-3.col-md-9
              button.btn.btn-primary(type='submit')= __('Login')
      div.col-md-3
        div.list-group
          a.list-group-item.active(href='/login')= __('Login')
          a.list-group-item(href='/register')= __('Register')
    include _footer
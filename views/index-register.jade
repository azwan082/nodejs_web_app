extends _layout

block content
  include _navbar
  div.container
    div.row
      o.breadcrumb
        li
          a(href='/')= __('Home')
        li.active= __('Register')
  div.container
    div.row
      div.col-md-9
        h1= __('Register')
        form.form-horizontal
          div.form-group
            label.col-md-3.control-label= __('Username')
            div.col-md-9
              input.form-control(type='text')
          div.form-group
            label.col-md-3.control-label= __('Email')
            div.col-md-9
              input.form-control(type='email')
          div.form-group
            label.col-md-3.control-label= __('Password')
            div.col-md-9
              input.form-control(type='password')
          div.form-group
            div.col-md-offset-3.col-md-9
              div.checkbox
                label
                  input(type='checkbox')
                  != __('Agree with <a href="%s">Terms and Conditions</a>', '#')
          div.form-group
            div.col-md-offset-3.col-md-9
              button.btn.btn-primary(type='submit')= __('Register')
      div.col-md-3
        div.list-group
          a.list-group-item(href='/login')= __('Login')
          a.list-group-item.active(href='/register')= __('Register')
    include _footer